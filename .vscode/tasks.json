{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Debug",
			"command": "C:\\mingw64\\bin\\gcc.exe",
			"args": [
				"-c",
				"src/*.c",
				"-g",
				"-Wall",
				"-m64",
				"-I",
				"include",
				"-I",
				"C:/libs/SDL2/include",
				"&&",
				"gcc",
				"*.o",
				"-o",
				"bin/debug/snake",
				"-L",
				"C:/libs/SDL2/lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"&&",
				"start",
				"bin/debug/snake"
			],
			"options": {
				"cwd": "${fileDirname}/.."
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\gcc.exe"
		},
		{
			"type": "cppbuild",
			"label": "Release",
			"command": "C:\\mingw64\\bin\\gcc.exe",
			"args": [
				"-c",
				"src/*.c",
				"-O3",
				"-Wall",
				"-m64",
				"-I",
				"include",
				"-I",
				"C:/SDL2-w64/include",
				"&&",
				"gcc",
				"*.o",
				"-o",
				"bin/release/snake",
				"-s",
				"-L",
				"C:/SDL2-w64/lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"&&",
				"start",
				"bin/debug/snake"
			],
			"options": {
				"cwd": "${fileDirname}/.."
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\gcc.exe"
		},
		{
			"label": "Run Debug",
			"command": "bin/debug/snake.exe",
			"options": {
				"cwd": "${fileDirname}/.."
			},
			"group": "build"
		},
		{
			"label": "Run Release",
			"command": "bin/release/snake.exe",
			"options": {
				"cwd": "${fileDirname}/.."
			},
			"group": "build"
		}
	]
}